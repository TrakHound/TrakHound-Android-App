<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="org.trakhound.www.trakhound.UserHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_background_gradient">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="40dp">

        <!--TrakHound Toolbar-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/TrakhoundToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/trakhound_toolbar"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:clickable="false" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/TrakhoundToolbar"
            android:layout_alignLeft="@+id/TrakhoundToolbar"
            android:layout_alignStart="@+id/TrakhoundToolbar"
            android:id="@+id/relativeLayout2">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33000000"
                android:layout_gravity="center_horizontal"
                android:id="@+id/view3"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@+id/relativeLayout2"
            android:layout_alignLeft="@+id/view2"
            android:layout_alignStart="@+id/view2">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/UserImage"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_panel"
                android:padding="10dp"
                android:layout_marginRight="20dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="[Username]"
                android:id="@+id/Username"
                android:layout_below="@+id/textView4"
                android:layout_toRightOf="@+id/UserImage"
                android:layout_toEndOf="@+id/UserImage"
                android:layout_marginBottom="20dp"
                android:textColor="#0080ff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="[Basic User]"
                android:id="@+id/PlanType"
                android:layout_below="@+id/textView5"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignStart="@+id/textView5"
                android:layout_marginBottom="10dp"
                android:textSize="16dp"
                android:textColor="#333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Username"
                android:id="@+id/textView4"
                android:layout_alignTop="@+id/UserImage"
                android:layout_alignLeft="@+id/Username"
                android:layout_alignStart="@+id/Username"
                android:textColor="#888"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="User Type"
                android:id="@+id/textView5"
                android:layout_below="@+id/Username"
                android:layout_alignLeft="@+id/Username"
                android:layout_alignStart="@+id/Username"
                android:textColor="#888"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Last Login"
                android:id="@+id/textView6"
                android:layout_below="@+id/PlanType"
                android:layout_alignLeft="@+id/PlanType"
                android:layout_alignStart="@+id/PlanType"
                android:textColor="#888"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="[Last Login]"
                android:id="@+id/LastLogin"
                android:layout_below="@+id/textView6"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignStart="@+id/textView6"
                android:textSize="16dp"
                android:textColor="#333" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33000000"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/view2" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_alignLeft="@+id/view2"
            android:layout_alignStart="@+id/view2"
            android:layout_marginTop="30dp">

            <!--Device List Button-->
            <LinearLayout
                android:id="@+id/DeviceListButton"
                style="@android:style/Widget.Button"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:background="@drawable/button_blue"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/list_02" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Device List"
                    android:textSize="26dp" />

            </LinearLayout>

            <!--Logout Button-->
            <LinearLayout
                android:id="@+id/LogoutButton"
                style="@android:style/Widget.Button"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:background="@drawable/button_blue"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/logout_01" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Logout"
                    android:textSize="26dp" />

            </LinearLayout>


            <!--<Button-->
                <!--android:text="Device List"-->
                <!--android:id="@+id/TrakHoundLoginButton"-->
                <!--android:onClick="openDeviceList"-->
                <!--android:layout_gravity="center_horizontal"-->

                <!--android:textColor="#fff"-->
                <!--android:textSize="18sp"-->

                <!--android:layout_width="300dp"-->
                <!--android:layout_height="60dp"-->
                <!--android:clickable="true"-->
                <!--android:background="@drawable/button_blue" />-->

            <!--<Button-->
                <!--android:text="Logout"-->
                <!--android:id="@+id/LocalLoginButton"-->
                <!--android:onClick="logout"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_marginTop="40dp"-->

                <!--android:textColor="#fff"-->
                <!--android:textSize="18sp"-->

                <!--android:layout_width="300dp"-->
                <!--android:layout_height="60dp"-->
                <!--android:background="@drawable/button_blue"-->
                <!--android:clickable="true" />-->

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
